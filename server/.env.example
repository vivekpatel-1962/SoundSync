# Server environment variables

# Port to run the Express server
PORT=4000

# MongoDB (optional; if not set, in-memory storage is used)
MONGODB_URI=
MONGODB_DB=moodcast

# YouTube Data API keys (required for YouTube search/recs)
# Provide either a single key or a comma-separated list for round-robin
YOUTUBE_API_KEY=
YOUTUBE_API_KEYS=

# YouTube client tuning
YT_KEY_COOLDOWN_MS=3600000
YT_CACHE_TTL_MS=0

# Recommendations cache & filtering
REC_CACHE_TTL_MS=600000
RECS_MUSIC_ONLY=1
RECS_MIN_SEC=60
RECS_MAX_SEC=900

# Optional: Python binary path/name for the recommender script
# If not set, defaults to "py -3" on Windows and "python" on Unix
PYTHON_BIN=
